<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Permitir memoria ejecutable sin firmar (requerido por Python) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Permitir cargar dylibs sin validación de firma (requerido por Python Framework) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Acceso a archivos seleccionados por el usuario -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Acceso a red (requerido para verificación de licencias y descarga inicial de modelos) -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>
